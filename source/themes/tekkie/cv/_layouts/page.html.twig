{% extends "splash.html.twig" %}

{% block body_id %}
{% if page.title %} id="page-{{ page.title | lower }}"{% endif %}
{% endblock %}

{% block body_class %}
{% if page.css.body_class %} class="{{ page.css.body_class }}"{% endif %}
{% endblock %}

{% block content_wrapper %}
<div class="columns is-mobile">
  <div class="column is-10 is-offset-1">
{% block content %}{% endblock %}
  </div>
</div>
{% endblock %}
